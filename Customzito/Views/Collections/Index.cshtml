<div class="container w-50 my-md-3 ps-md-3 text-center">
    <div class="row align-items-center">
        @foreach (var item in ViewBag.Colecoes)
        {
            <div class="bg-dark me-md-3 pt-3  text-center text-white overflow-hidden rounded-1 mb-5 ">
                <a href="/Produtos/Colecoes/@item.IdColecao" style="text-decoration: none; color:white">
                    <div class="my-3 py-3">
                        <h2 class="display-5 colecoes-text-card ">@item.Descricao</h2>
                        @if (item.Limitado == true)
                        {
                            <p class="lead text-warning colecoes-text-limitado">EDIÇÃO LIMITADA!</p>
                        }

                    </div>
                </a>
            </div>
        }
    </div>

    

</div>

