<section style="margin-top: 110px" class="text-center">
    <img src="~/images/collections.svg" class="img-fluid mb-5 w-75" />
</section>

<div class="container w-75 my-md-3 ps-md-3 text-center">
    <div class="row row-cols-1 row-cols-md-2 g-3">
        @foreach (var item in ViewBag.Colecoes)
        {
            <div class="col mb-4">
                <div class="pt-3 text-center text-white overflow-hidden rounded-1" style="background-color: black;">
                    <a href="/Produtos/Colecoes/@item.IdColecao" style="text-decoration: none; color: white">
                        <div class="my-3 py-3">
                            <img src="~/images/colecoes.svg" class="img-fluid mb-3" style="width: 100%; height: auto;" />
                            <h2 class="display-6 colecoes-text-card">@item.Descricao</h2>
                            @if (item.Limitado == true)
                            {
                                <p class="lead text-warning colecoes-text-limitado">EDIÇÃO LIMITADA!</p>
                            }
                        </div>
                    </a>
                </div>
            </div>
        }
    </div>
</div>