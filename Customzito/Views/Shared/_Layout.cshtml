<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Customzito</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />

    <!-- Customzito CSS -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Customzito.styles.css" asp-append-version="true" />


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" href="/Index">
                    <img src="support/src/navLogo.png" alt="" style="width:auto; height: auto; max-width: 100px; max-height:100px " />
                </a>
            </div>
            <a class="navbar-brand header-nav-font-style-size titulo-nav-spacing" asp-area="" asp-page="/Index">CUSTOMZITO</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="container">                
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-sm-center">
                    <ul class="navbar-nav mr-auto header-nav-itens-font-style">
                        <li class="nav-item titulo-item">
                            <a class="nav-link" asp-area="" asp-page="">coleções</a>
                        </li>
                        <li class="nav-item titulo-item">
                            <a class="nav-link" asp-area="" asp-page="">sobre</a>
                        </li>
                        <li class="nav-item titulo-item">
                            @Html.ActionLink("stock","Index","Stock")
                        </li>
                    </ul>              
                    <form class="form-inline my-2 my-md-4 titulo-form">
                        <input class="form-control form-control-sm" type="text" placeholder="Pesquisar" aria-label="Search">
                    </form>
                </div>                
            </div>      

        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Customzito - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <!-- Bootstrap -->
    <script src="~/lib/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- Three JS-->
    <script src="~/js/es-module-shims.js"></script>


    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>