@{

   
}

<!-- Modal Roupas -->
<div class="modal fade" id="AdicionarRoupaModal" tabindex="-1" aria-labelledby="AdicionarRoupaModal" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel" style="letter-spacing: 3px;"><b>ADICIONAR ROUPA</b></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col align-content-center">
                        <label for="DescricaoRoupa" class="form-label">
                            Descrição
                        </label>
                    </div>
                    <div class="col align-content-center">
                        <input type="text" id="DescricaoRoupa" class="form-control" placeholder="Ex: Hoodie Bc Raff" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col align-content-center">
                        <label for="Titulo" class="form-label">
                            Titulo
                        </label>
                    </div>
                    <div class="col align-content-center">
                        <input type="text" id="Titulo" class="form-control" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col align-content-center">
                        <label for="Prco" class="form-label">
                            Preço
                        </label>
                    </div>
                    <div class="col align-content-center">
                        <input type="text" id="Preco" class="form-control" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col align-content-center">
                        <label for="TipoVestimenta" class="form-label">
                            Tipo de Vestimenta
                        </label>
                    </div>
                    <div class="col align-content-center">
                        <input type="text" id="TipoVestimenta" class="form-check" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col align-content-center">
                        <label for="Quantidade" class="form-label">
                            Quantidade
                        </label>
                    </div>
                    <div class="col align-content-center">
                        <input type="text" id="Quantidade" class="form-control" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col align-content-center">
                        <label for="Cores" class="form-label">
                            Cores
                        </label>
                    </div>
                    <div class="col align-content-center">
                        <input type="text" id="Cores" class="form-control" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col align-content-center">
                        <label for="Materiais" class="form-label">
                            Materiais
                        </label>
                    </div>
                    <div class="col align-content-center">
                        <input type="text" id="Materiais" class="form-control" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col align-content-center">
                        <label for="Marca" class="form-label">
                            Marca
                        </label>
                    </div>
                    <div class="col align-content-center">
                        <input type="text" id="Marca" class="form-control" />
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col align-content-center">
                        <label for="Imagem" class="form-label">
                            Imagem
                        </label>
                    </div>
                    <div class="col align-content-center">
                        <input type="file" id="Imagem" class="form-control" />
                    </div>
                </div>
                <div class="row mt-2">

                    <div class="body table-responsive rounded mt-2" style="max-height: 500px; overflow-y: auto;">

                        <table class="table table-hover table-stripped">
                            <thead class="table-dark">
                                <tr>
                                    <th style="letter-spacing: 3px;">
                                        Roupas na coleção
                                    </th>
                                    <th>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model is not null)
                                {
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td scope="row">
                                                @item.Titulo
                                            </td>
                                            <td>
                                                @item.Descricao
                                            </td>
                                            <td>
                                                @item.Preco
                                            </td>
                                            <td>
                                                @item.qtd
                                            </td>
                                        </tr>
                                    }
                                }
                                else
                                {

                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Fechar</button>
                <button type="button" class="btn btn-primary">Salvar Coleção</button>
            </div>
        </div>
    </div>
</div>