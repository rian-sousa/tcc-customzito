<div class="card mb-3" style="max-width: 540px;">
    <div class="row g-0">
        <div class="col-md-6">
            <!-- Canvas Fabric.js -->
            <canvas id="canvas" width="500" height="200" class="mt-2 ml-5 justify-content-center align-content-center" style="border: 1px solid #000;"></canvas>
        </div>
        <div class="col-md-8">
            <div class="card-body custom-text">
                <h1 class="card-title">Customizar Roupa</h1>
                <div class="col custom-text">
                    <!-- Área de upload de imagens -->
                    <h2 class="custom-text">Selecione a sua estampa</h2>
                    <input type="file" id="imageUpload" accept="image/*">
                    <button id="addImageBtn" class="btn btn-primary mt-2 custom-text">Adicionar Imagem</button>
                    
                </div>
            </div>
        </div>
    </div>
</div>



