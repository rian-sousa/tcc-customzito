<section style="margin-top: 200px">
    <div class="card mb-3 mt-4 shadow-lg">
        <div class="row g-0 ml-5 align-content-center" style="margin-left: 10%;">
            <div class="col-md-12">

                <div class="card-body custom-text">
                    <h1 class=" mt-2">Customizar Roupa</h1>
                    <div class="row">
                        <div class="col-md-8 mr-5 mt-1">
                            <!-- Canvas -->
                            <canvas id="canvas" width="700" height="400" class="rounded border border-5 justify-content-center align-content-center canvas "></canvas>

                            <div id="funcoes">
                                <input type="file" id="imageUpload" accept="image/*">
                                <button id="addImageBtn" class="btn btn-primary mt-2 custom-text">Adicionar Imagem</button>
                                <button type="button" id="salvar" class="btn btn-success custom-text mt-2">Salvar Criação</button>
                            </div>
                        </div>

                        <div class="col-md-3">
                            <!-- Menu de imagens -->
                            <div class="col custom-text">
                                <div class="d-flex flex-column align-items-center">
                                    <h5 class=" justify-content-end align-content-end ">Selecione o modelo da roupa</h5>
                                    <div id="carouselCustom" class="carousel carousel-dark slide" data-bs-ride="carousel">
                                        <div class="carousel-indicators">
                                            <button type="button" data-bs-target="#carouselCustom" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                            <button type="button" data-bs-target="#carouselCustom" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                            <button type="button" data-bs-target="#carouselCustom" data-bs-slide-to="2" aria-label="Slide 3"></button>
                                            <button type="button" data-bs-target="#carouselCustom" data-bs-slide-to="3" aria-label="Slide 4"></button>
                                            <button type="button" data-bs-target="#carouselCustom" data-bs-slide-to="4" aria-label="Slide 5"></button>
                                        </div>
                                        <div class="carousel-inner">
                                            <div class="carousel-item active">
                                                <img class="rounded-2 icones-menu-custom img-thumbnail opt" src="images/custom-bases/cortavento.png" data-src="images/custom-bases/cortavento.png" />
                                            </div>
                                            <div class="carousel-item">
                                                <img class="rounded-2 icones-menu-custom img-thumbnail opt" src="images/custom-bases/blusadefrio.png" data-src="images/custom-bases/blusadefrio.png" />
                                            </div>
                                            <div class="carousel-item">
                                                <img class="rounded-2 icones-menu-custom img-thumbnail opt" style="height: 200px;" src="images/custom-bases/blusadefriocapuz.png" data-src="images/custom-bases/blusadefriocapuz.png" />
                                            </div>
                                            <div class="carousel-item">
                                                <img class="rounded-2 icones-menu-custom img-thumbnail opt" src="images/custom-bases/camisa.png" data-src="images/custom-bases/camisa.png" />
                                            </div>
                                            <div class="carousel-item">
                                                <img class="rounded-2 icones-menu-custom img-thumbnail opt" src="images/custom-bases/mangalonga.png" data-src="images/custom-bases/mangalonga.png" />
                                            </div>
                                        </div>
                                        <button class="carousel-control-prev" type="button" data-bs-target="#carouselCustom" data-bs-slide="prev">
                                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Previous</span>
                                        </button>
                                        <button class="carousel-control-next" type="button" data-bs-target="#carouselCustom" data-bs-slide="next">
                                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                            <span class="visually-hidden">Next</span>
                                        </button>
                                    </div>
                                    <label class="mt-3">Selecione uma cor:</label>
                                    <div class="d-inline-block menu">

                                        <div id="color" class="quadrado branco rounded border border-1"></div>
                                        <div id="color" class="quadrado preto"></div>
                                        <div id="color" class="quadrado rosa"></div>
                                        <div id="color" class="quadrado azul"></div>
                                        <div id="color" class="quadrado vermelho"></div>
                                    </div>

                                    <div class="dropdown mt-3">
                                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuMaterial" data-bs-toggle="dropdown" aria-expanded="false">
                                            Escolher Material
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenuMaterial">
                                            <li><a class="dropdown-item" href="#">Algodão</a></li>
                                            <li><a class="dropdown-item" href="#">Poliéster</a></li>
                                            <li><a class="dropdown-item" href="#">Malha Fria</a></li>
                                        </ul>
                                    </div>

                                    <button class="btn btn-success btn-lg mt-5">Adicionar ao carrinho!</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>



@section Scripts{

    <script src="~/js/Canvas.js"></script>
    
}