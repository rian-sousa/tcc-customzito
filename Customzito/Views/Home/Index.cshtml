@page
@using Customzito.Views.Home;
@model IndexModel
@{
    if(TempData["Layout"] is not null)
    {
        Layout = TempData["Layout"] as string;
    }
    else
    {
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
}


<section class="banner-1 d-flex flex-column">
   <img src="~/images/banner-1.svg" />
</section>
<section>
    <div class="container mt-5">
        <h1 class="text-center mb-5">MAIS VENDIDOS</h1>

        <div class="carousel slide" data-bs-ride="carousel">
            <div class="carousel-inner">
                <!-- Slide  -->
                <div class="carousel-item active">
                    <div class="d-flex justify-content-center">
                        <div class="card me-3">
                            <img src="produto1.jpg" class="card-img-top img-fluid" alt="Produto 1">
                            <div class="card-body">
                                <h5 class="card-title">Produto 1</h5>
                                <p class="card-text">Descrição do Produto 1.</p>
                                <a href="#" class="btn btn-primary">Comprar</a>
                            </div>
                        </div>

                        <div class="card me-3">
                            <img src="produto2.jpg" class="card-img-top img-fluid" alt="Produto 2">
                            <div class="card-body">
                                <h5 class="card-title">Produto 2</h5>
                                <p class="card-text">Descrição do Produto 2.</p>
                                <a href="#" class="btn btn-primary">Comprar</a>
                            </div>
                        </div>

                        <div class="card me-3">
                            <img src="produto3.jpg" class="card-img-top img-fluid" alt="Produto 3">
                            <div class="card-body">
                                <h5 class="card-title">Produto 3</h5>
                                <p class="card-text">Descrição do Produto 3.</p>
                                <a href="#" class="btn btn-primary">Comprar</a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="carousel-item active">
                    <div class="d-flex justify-content-center">
                        <div class="card me-3">
                            <img src="produto4.jpg" class="card-img-top img-fluid" alt="Produto 4">
                            <div class="card-body">
                                <h5 class="card-title">Produto 4</h5>
                                <p class="card-text">Descrição do Produto 4.</p>
                                <a href="#" class="btn btn-primary">Comprar</a>
                            </div>
                        </div>

                        <div class="card me-3">
                            <img src="produto5.jpg" class="card-img-top img-fluid" alt="Produto 5">
                            <div class="card-body">
                                <h5 class="card-title">Produto 5</h5>
                                <p class="card-text">Descrição do Produto 5.</p>
                                <a href="#" class="btn btn-primary">Comprar</a>
                            </div>
                        </div>

                        <div class="card me-3">
                            <img src="produto6.jpg" class="card-img-top img-fluid" alt="Produto 6">
                            <div class="card-body">
                                <h5 class="card-title">Produto 6</h5>
                                <p class="card-text">Descrição do Produto 6.</p>
                                <a href="#" class="btn btn-primary">Comprar</a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Repita a estrutura acima para os Slides 2, 3, 4, 5, 6 -->

            </div>
            <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Anterior</span>
            </button>
            <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Próximo</span>
            </button>
        </div>
    </div>

</section>
<section class="py-5">

    <h1 class="text-center mb-5">NOSSOS SERVIÇOS</h1>

    <div class="container d-flex justify-content-around flex-wrap">
        <div class="card card-move m-4 col-md-3 me-5" style="width: 20rem;">
            <img src="./images/customzito-card.svg" class="card-img-top"/>
            <div class="card-body d-flex flex-column">
                <h5 class="card-title py-2 fw-bold">Customzito</h5>
                <p class="card-text">Customzito: Sua Moda, Sua Voz</p>
                <p>
                    Na Customzito, celebramos a cultura das periferias brasileiras e a transformamos em moda autêntica. Escolha entre nossas peças únicas ou crie sua própria camiseta personalizada. Seja parte de uma comunidade que valoriza a individualidade.
                </p>
                <a href="@Url.Action("Index","Sobre")" class="btn botao-padrao w-100 mt-auto">Sobre nós</a>
            </div>
        </div>

        <div class="card card-move m-4 col-md-3 me-5" style="width: 20rem;">
            <img src="./images/custom-card.svg" class="card-img-top" alt="...">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title py-2 fw-bold">Custom</h5>
                <p class="card-text">
                    Personalize uma peça do seu jeito!
                    Use as nossas estampas disponíveis na tela de personalização ou faça uplaod da sua própria arte!
                </p>
                <a href="@Url.Action("Index","Custom")" class="btn botao-padrao w-100 mt-auto">Customizar</a>
            </div>
        </div>

        <div class="card card-move m-4 col-md-3 me-5" style="width: 20rem;">
            <img src="./images/coleções-card.svg" class="card-img-top" alt="...">
            <div class="card-body d-flex flex-column">
                <h5 class="card-title py-2 fw-bold">Nossas Coleções</h5>
                <p class="card-text">Aqui estão todas as nossas coleções disponíveis.</p>
                <a href="#" class="btn botao-padrao w-100 mt-auto">Quero ver!</a>
            </div>
        </div>
    </div>

</section>
<section class="banner-2 d-flex flex-column">
    <img src="~/images/banner - 2.svg"/>


</section>







