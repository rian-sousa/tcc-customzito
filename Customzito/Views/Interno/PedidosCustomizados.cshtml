@{
    Layout = "~/Views/Shared/_LoggedLayout.cshtml";

    var lstPedidos = ViewBag.Pedidos;
}

<div class="container">
    <div class="fs-1 text-center">BEM, VINDO! [FULANO]!</div>

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <div class="card-title fs-2 text-center">
                        VENDAS DO DIA
                    </div>
                    <div class="card text-white bg-success mb-3" >
                        <div class="card-header text-center fs-3">CUSTOMIZADOS</div>
                        <div class="card-body d-flex">
                            <div class="col text-center">
                                <p class="card-title">Mês: 35</p>
                            </div>
                            <div class="col text-center">
                                <p class="card-title">Dia: 2</p>
                            </div>                            
                        </div>
                    </div>
                    <div class="card text-white bg-success mb-3">
                        <div class="card-header text-center fs-3">PRÉ-FABRICADOS</div>
                        <div class="card-body d-flex">
                            <div class="col text-center">
                                <p class="card-title">Mês: 85</p>
                                
                            </div>
                            <div class="col text-center">
                                <p class="card-title">Dia: 5</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-5">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Protocolo</th>
                    <th scope="col">ID. Perfil</th>
                    <th scope="col">ID. Carrinho</th>
                    <th scope="col">Tipo de Pedido</th>
                    <th scope="col">Status</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var pedido in lstPedidos)
                {
                    <tr>
                        <th scope="row">
                            @pedido.Protocolo
                        </th>
                        <td>@pedido.ValorTotal</td>
                        <td>@pedido.IdPerfil</td>
                        <td>@pedido.IdCarrinho</td>
                        <td>@pedido.TipoPedido</td>
                        <td>@pedido.Status</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>